<h1>Delete Activity</h1>
<form method="post">
    @foreach(var activity in ViewBag.activities)
      {
        <div class="form-group">
            <label>
                <span> @activity.Name</span>
                <input type="checkbox" name="activitiesIds" value="@activity.Id" />
            </label>
        </div>
      }
    <input type="submit" name="Delete Selected Activities" class="btn btn-danger"/>

</form>